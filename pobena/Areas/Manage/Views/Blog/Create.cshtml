
@model Blog
@{ ViewData["Title"] = "Create"; }

<div class="row">
    <div class="col-lg-6 h3 mb-4 text-gray-800">
        <h1>Blog Create</h1>
    </div>
    <div class="col-lg-12 mx-auto">
        <form method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="Title"></label>
                <input class="form-control" asp-for="Title" placeholder="Enter title">
                <span class="text-danger" asp-validation-for="Title"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <input class="form-control" asp-for="Description" placeholder="Enter description">
                <span class="text-danger" asp-validation-for="Description"></span>
            </div>
            <div class="form-group">
                <label asp-for="PublisherName"></label>
                <input class="form-control" asp-for="PublisherName" placeholder="Enter publishername">
                <span class="text-danger" asp-validation-for="PublisherName"></span>
            </div>
            <div class="form-group">
                <label asp-for="TagIds" style="margin-right: 10px;">Tags</label>
                @for (var i = 0; i < ViewBag.Tags.Count; i++)
                {
                    <input type="checkbox" name="TagIds" id="TagIds" value="@(ViewBag.Tags[i].Id)" />@(ViewBag.Tags[i].Name)
                }
                <span class="text-danger" asp-validation-for="TagIds"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageFile"></label>
                <input class="form-control" accept="image/jpeg" asp-for="ImageFile" placeholder="Enter ImagesFile">
                <span class="text-danger" asp-validation-for="ImageFile"></span>
            </div>
            <div asp-validation-summary="ModelOnly"></div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>

