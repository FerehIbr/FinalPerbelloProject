@model ShopVM

<div class="breadcrumb-section bgc-offset mb-full">
    <div class="container">
        <div class="row">
            <div class="col-12 col-sm-12 col-md-12">
                <nav class="breadcrumb">
                    <a class="breadcrumb-item" asp-controller="Home" asp-action="Index">Home</a>
                    <span class="breadcrumb-item active">Shop</span>
                </nav>
            </div>
        </div>
    </div>
</div>
<div id="content" class="main-content-wrapper">

    <div class="products-wrapper">
        <div class="container">
            <div class="row">
                <div class="col-12 col-sm-12 col-md-12 col-lg-9 order-1 order-md-1 order-lg-2">
                    <main id="primary" class="site-main">
                        <div class="shop-wrapper">
                            <div class="row">
                                <div class="col-12 col-sm-12 col-md-12">
                                    <h1>Shop</h1>
                                    <div class="shop-toolbar">
                                        <div class="toolbar-inner">
                                            <div class="product-view-mode">
                                                <ul role="tablist" class="nav shop-item-filter-list">
                                                    <li role="presentation" class="active"><a href="#grid" aria-controls="grid" role="tab" data-bs-toggle="tab" class="active show" aria-selected="true"><i class="ion-md-grid"></i></a></li>
                                                    <li role="presentation"><a href="#list" aria-controls="list" role="tab" data-bs-toggle="tab"><i class="ion-md-list"></i></a></li>
                                                </ul>
                                            </div>
                                            <div class="toolbar-amount">
                                                <span>Showing 10 to 18 of 27</span>
                                            </div>
                                        </div>
                                        <div class="product-select-box">
                                            <div class="product-sort">
                                                <p>Sort By:</p>
                                                <select class="selectfilter sortby" name="sortby">
                                                    <option value="1">Relevance</option>
                                                    <option selected value="2">Name (A - Z)</option>
                                                    <option value="3">Name (Z - A)</option>
                                                    <option value="4">Price (Low > High)</option>
                                                    <option value="5">Rating (Lowest)</option>
                                                    <option value="6">Model (A - Z)</option>
                                                    <option value="7">Model (Z - A)</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12 col-sm-12 col-md-12">
                                    <div class="shop-products-wrapper">
                                        <div class="tab-content">
                                            <div id="grid" class="tab-pane anime-tab active show" role="tabpanel">
                                                <div class="row shop-products2">
                                                    @await Html.PartialAsync("_ShopProductListPartial2", Model.Products)

                                                </div>
                                            </div>
                                            <div id="list" class="tab-pane anime-tab" role="tabpanel">
                                                <div class="row">
                                                    <div class="col-12 col-sm-12 col-md-12 shop-products">
                                                        @await Html.PartialAsync("_ShopProductListPartial", Model.Products)



                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row align-items-center">
                                        <div class="col-12 order-1 col-sm-12 col-md-6 order-md-2 col-lg-6">

                                            <nav>
                                                <ul class="pagination justify-content-center">
                                                    <li class="page-item @(ViewBag.PageIndex <= 1 ? "disabled" : "")">
                                                        <a class="page-link" asp-controller="shop" asp-action="index" asp-route-page="1" aria-label="First"  data-bs-toggle="tooltip"  data-bs-placement="left"  title=""  data-bs-original-title="First page">
                                                            <span aria-hidden="true">&laquo;</span>
                                                        </a>
                                                    </li>
                                                    <li class="page-item @(ViewBag.PageIndex <= 1 ? "disabled" : "")">
                                                        <a class="page-link" asp-controller="shop" asp-action="index" asp-route-page="@(ViewBag.PageIndex - 1)" aria-label="Previous"  data-bs-toggle="tooltip"  data-bs-placement="top"  title=""  data-bs-original-title="Previous">
                                                            <span aria-hidden="true">&lsaquo;</span>
                                                        </a>
                                                    </li>

                                                    @if (ViewBag.PageIndex == ViewBag.PageCount && ViewBag.PageIndex > 2)
                                                    {
                                                        <li class="page-item">
                                                            <a class="page-link" asp-controller="shop" asp-action="index" asp-route-page="@(ViewBag.PageIndex - 2)">
                                                                @(ViewBag.PageIndex - 2)
                                                            </a>
                                                        </li>
                                                    }
                                                    @if (ViewBag.PageIndex > 1)
                                                    {
                                                        <li class="page-item">
                                                            <a class="page-link" asp-controller="shop" asp-action="index" asp-route-page="@(ViewBag.PageIndex - 1)">
                                                                @(ViewBag.PageIndex - 1)
                                                            </a>
                                                        </li>
                                                    }

                                                    <li class="page-item active" aria-current="page">
                                                        <a class="page-link" asp-controller="shop" asp-action="index" asp-route-page="@(ViewBag.PageIndex)">
                                                            @(ViewBag.PageIndex)
                                                        </a>
                                                    </li>

                                                    @if (ViewBag.PageIndex < ViewBag.PageCount)
                                                    {
                                                        <li class="page-item">
                                                            <a class="page-link" asp-controller="shop" asp-action="index" asp-route-page="@(ViewBag.PageIndex + 1)">
                                                                @(ViewBag.PageIndex + 1)
                                                            </a>
                                                        </li>
                                                    }
                                                    @if (ViewBag.PageIndex == 1 && (ViewBag.PageIndex + 2) <= ViewBag.PageCount)
                                                    {
                                                        <li class="page-item">
                                                            <a class="page-link" asp-controller="shop" asp-action="index" asp-route-page="@(ViewBag.PageIndex + 2)">
                                                                @(ViewBag.PageIndex + 2)
                                                            </a>
                                                        </li>
                                                    }

                                                    <li class="page-item @(ViewBag.PageIndex >= ViewBag.PageCount ? "disabled" : "")">
                                                        <a class="page-link" asp-controller="shop" asp-action="index" asp-route-page="@(ViewBag.PageIndex + 1)" aria-label="Next"  data-bs-toggle="tooltip"  data-bs-placement="top"  title=""  data-bs-original-title="Next">
                                                            <span aria-hidden="true">&rsaquo;</span>
                                                        </a>
                                                    </li>

                                                    <li class="page-item @(ViewBag.PageIndex >= ViewBag.PageCount ? "disabled" : "")">
                                                        <a class="page-link" asp-controller="shop" asp-action="index" asp-route-page="@ViewBag.PageCount" aria-label="Last"  data-bs-toggle="tooltip"  data-bs-placement="right"  title=""  data-bs-original-title="Last page">
                                                            <span aria-hidden="true">&raquo;</span>
                                                        </a>
                                                    </li>
                                                </ul>
                                            </nav>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </main>
                </div>
                <div class="col-12 col-sm-12 col-md-12 col-lg-3 order-2 order-md-2 order-lg-1">
                    <aside id="secondary" class="widget-area">
                        <div class="sidebar-widget list-widget">
                            <h2 class="widgettitle">Categories</h2>
                            <div class="list-widget-wrapper">
                                <div class="list-group">
                                    @foreach (Category item in ViewBag.Categories)
                                    {
                                        <a asp-controller="shop" asp-action="filter" data-id="@item.Id" class="shopFilter category">@item.Name</a>
                                    }

                                </div>
                            </div>
                        </div>
                        <div class="sidebar-widget list-widget">
                            <h2 class="widgettitle">Brands</h2>
                            <div class="list-widget-wrapper">
                                <div class="list-group">
                                    @foreach (Brand item in ViewBag.Brands)
                                    {
                                        <a asp-controller="shop" asp-action="filter" data-id="@item.Id" class="shopFilter brand">@item.Name</a>
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="sidebar-widget list-widget">
                            <h2 class="widgettitle">Price</h2>
                            <div class="list-widget-wrapper">
                                <div class="list-group">
                                    <a asp-controller="shop" asp-action="filter" data-id="1" class="shopFilter brand" class="shopFilter price">$200.00 - $300.00</a>
                                    <a asp-controller="shop" asp-action="filter" data-id="2" class="shopFilter brand" class="shopFilter price">$500.00 - $600.00</a>
                                    <a asp-controller="shop" asp-action="filter" data-id="3" class="shopFilter brand" class="shopFilter price">$700.00 - $800.00</a>
                                    <a asp-controller="shop" asp-action="filter" data-id="4" class="shopFilter brand" class="shopFilter price">$900.00 - $1000.00</a>
                                    <a asp-controller="shop" asp-action="filter" data-id="5" class="shopFilter brand" class="shopFilter price">$1000.00 - $1500.00</a>
                                </div>
                            </div>
                        </div>
                        <div class="sidebar-widget color-widget">
                            <h2 class="widgettitle">Color</h2>
                            <div class="color-widget-wrapper">
                                <ul class="color-options">
                                    @foreach (Color item in ViewBag.Colors)
                                    {
                                        <li>
                                            <span class="@item.Name"></span>
                                            <a asp-controller="shop" asp-action="filter" data-id="@item.Id" class="shopFilter color">@item.Name</a>
                                        </li>
                                    }
                                </ul>
                            </div>
                        </div>

                    </aside>
                </div>
            </div>
        </div>
    </div>

</div>
