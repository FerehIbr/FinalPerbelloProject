@model MemberUpdateVM
<form asp-action="Edit" asp-controller="Account" method="post">
    <div class="row">
        <div class="col-lg-6">
            <div class="single-input-item">
                <label asp-for="FullName" class="required">First Name</label>
                <input asp-for="FullName" placeholder="First Name">
            </div>
        </div>
    </div>
    <div class="single-input-item">
        <label asp-for="Email" class="required"></label>
        <input asp-for="Email" placeholder="email">
    </div>
    <div class="single-input-item">
        <label asp-for="UserName" class="required"></label>
        <input asp-for="UserName" placeholder="email">
    </div>
    <div class="single-input-item">
        <label asp-for="Address" class="required"></label>
        <input asp-for="Address" placeholder="email">
    </div>
    <div class="single-input-item">
        <label asp-for="PhoneNumber" class="required"></label>
        <input asp-for="PhoneNumber" placeholder="email">
    </div>
    <div class="single-input-item">
        <label asp-for="Country" class="required"></label>
        <input asp-for="Country" placeholder="email">
    </div>
    <div class="single-input-item">
        <label asp-for="State" class="required"></label>
        <input asp-for="State" placeholder="email">
    </div>
    <div class="single-input-item">
        <label asp-for="ZipCode" class="required"></label>
        <input asp-for="ZipCode" placeholder="email">
    </div>
    <fieldset>
        <legend>Password change</legend>
        <div class="single-input-item">
            <label asp-for="CurrentPassword" class="required"></label>
            <input asp-for="CurrentPassword" placeholder="email">
        </div>
        <div class="row">
            <div class="col-lg-6">
                <div class="single-input-item">
                    <label asp-for="Password" class="required"></label>
                    <input asp-for="Password" placeholder="email">
                </div>
            </div>
            <div class="col-lg-6">
                <div class="single-input-item">
                    <label asp-for="ConfirmPassword" class="required"></label>
                    <input asp-for="ConfirmPassword" placeholder="email">
                </div>
            </div>
        </div>
    </fieldset>
    <div class="single-input-item">
        <button class="check-btn sqr-btn ">Save Changes</button>
    </div>
</form>
