@model HomeVM
<main id="content" class="main-content-wrapper">


    <section id="NikeWomen">
        <div class="nike">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <img src="https://static.fendi.com/dam/is/image/fendi/8BR798A5DYF1HD6_99?wid=792&hei=792&sw=792&sh=792" alt="" style="height:800px; width:1120px;">
                        <h1></h1> <br> <h2></h2>
              
                        
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="support-section mb0">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-12 col-sm-6 col-md-3 col-lg-3 feature-box">
                    <div class="feature-content">
                        <h2>Free Shipping</h2>
                        <p>Free shipping on all order</p>
                    </div>
                </div> 
                <div class="col-12 col-sm-6 col-md-3 col-lg-3 feature-box">
                    <div class="feature-content">
                        <h2>Money Return</h2>
                        <p>30 days for free return</p>
                    </div>
                </div> 
                <div class="col-12 col-sm-6 col-md-3 col-lg-3 feature-box">
                    <div class="feature-content">
                        <h2>Online Support</h2>
                        <p>Support 24 hours a day</p>
                    </div>
                </div>
                <div class="col-12 col-sm-6 col-md-3 col-lg-3 feature-box">
                    <div class="feature-content">
                        <h2>Deals &amp; Promotions</h2>
                        <p>Price savings, discounts, coupons</p>
                    </div>
                </div> 
            </div>
        </div>
    </section>
    <div class="banner-section mb-half">
        <div class="container">
            <div class="row">
                <div class="col-6 col-sm-6 col-md-4 col-lg-4">
                    <div class="promo-banner hover-effect-1">
                        <a href="#">
                            <img src="https://static.fendi.com/dam/is/image/fendi/8BH388AFG3F1HZ8_99?wid=792&hei=792&hash=267d499123d019be29226586e828b9cb-18106e53616&sw=792&sh=792" alt="Promo Banner" style="height:350px; width:90%">
                        </a>
                    </div> 
                </div>
                <div class="col-6 col-sm-6 col-md-4 col-lg-4">
                    <div class="promo-banner hover-effect-1">
                        <a href="#">
                            <img src="https://images.lvrcdn.com/Big74I/A92/003_bb50d253-8162-47b9-8c79-add407d9a8a9.JPG" alt="Promo Banner" style="height: 350px; width: 90%">
                        </a>
                    </div>
                </div>
                <div class="col-12 col-sm-12 col-md-4 col-lg-4">
                    <div class="promo-banner hover-effect-1">
                        <a href="#">
                            <img src="https://static.fendi.com/dam/is/image/fendi/FDB849AFLKF0ZNM_99?wid=792&hei=792&hash=43bc0300870aef2bcb30e55ded31c4fb-18113df1782&sw=792&sh=792" alt="Promo Banner"style="height: 350px; width: 90%">
                        </a>
                    </div> 
                </div>
            </div> 
        </div> 
    </div>
    <section class="new-arrivals-section">
        <div class="container">
            <div class="row">
                <div class="col-12 col-sm-12 col-md-12">
                    <div class="section-title">
                        <h2>New Trending Products</h2>
                        <p class="subtitle">Accumsan vitae pede lacus ut ullamcorper sollicitudin quisque libero est</p>
                    </div>
                </div>
            </div> 
            <div class="row product-row">
                <div class="col-12 col-sm-12 col-md-12">
                    <div class="new-products pos-r">
                        <div class="element-carousel anime-element" data-visible-slide="4" data-loop="false" data-space-between="0" data-speed="1000">

                            <div class="swiper-wrapper">
                               
                                    @foreach (Product product in Model.Products)
                                    {
                                            <article class="swiper-slide product-layout">
                                                <div class="product-thumb">
                                                    <div class="product-inner">
                                                        <div class="product-image">
                                                            <div class="label-product label-sale">-20%</div>
                                                            <div class="label-product label-new">New</div>
                                                            <a asp-action="detail" asp-controller="product" asp-route-id="@product.Id">
                                                                <img src="~/assets/images/products/single/@product.MainImage" alt="Compete Track Tote" title="Compete Track Tote">
                                                            </a>
                                                            <div class="action-links">
                                                                <a class="btn-cart addtocart" asp-controller="Home"
                                                                   asp-action="AddToBasket" asp-route-id="@product.Id"
                                                                   asp-route-sizeid="@product.ProductColorSizes.ElementAt(0).SizeId"
                                                                   asp-route-colorid="@product.ProductColorSizes.ElementAt(0).ColorId"
                                                                   title="Add to Cart"><i class="pe-7s-shopbag"></i></a>
                                                               

                                                            </div>
                                                        </div>
                                                        <div class="product-caption">
                                                            <div class="product-meta d-flex justify-content-between align-items-center">
                                                                <div class="product-manufacturer">
                                                                    <a href="#">Studio Design</a>
                                                                </div>
                                                                <div class="product-ratings">
                                                                    <div class="rating-box">
                                                                        <ul class="rating d-flex">
                                                                            <li><i class="ion ion-md-star-outline"></i></li>
                                                                            <li><i class="ion ion-md-star-outline"></i></li>
                                                                            <li><i class="ion ion-md-star-outline"></i></li>
                                                                            <li><i class="ion ion-md-star-outline"></i></li>
                                                                            <li><i class="ion ion-md-star-outline disabled"></i></li>
                                                                        </ul>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <h4 class="product-name"><a  href="">Compete Track Tote</a></h4>
                                                            <p class="product-price">
                                                                @if (product.DiscountPrice != 0)
                                                                {
                                                                    <span class="price-old">$@product.DiscountPrice</span>
                                                                    <span class="price-new">$@product.Price</span>
                                                                }
                                                                else
                                                                {
                                                                    <span class="price-new">$@product.Price</span>
                                                                }
                                                            </p>
                                                        </div>
                                                    </div>
                                                </div>
                                            </article>
                                    }
                              
                            </div>
                            <div class="swiper-arrow next"><i class="fa fa-angle-right"></i></div>
                            <div class="swiper-arrow prev"><i class="fa fa-angle-left"></i></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section id="hurryup">
        <div class="hurry">
            <div class="container">
                <div class="row">
                    <div class="col-12 col-sm-12 col-md-12 col-lg-12">
                        <div class="text">
                            <iframe width="1100" height="600" src="https://www.youtube.com/embed/UfQaAhD6Vzg" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                            <div class="promo-text">
                               
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="instagram-section">
        <div class="container">
            <div class="row">
                <div class="col-12 col-sm-12 col-md-12">
                    <div class="section-title type-2 pt-full top-bordered">
                        <h2>Follow us On Instagram</h2>
                        <p class="subtitle">Consequat magna, massa vel suspendisse morbi aliquam faucibus ligula ante ipsum ac nulla.</p>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-12 col-sm-12 col-md-12">
                    <div class="instagram-container">

                        <div id="instagram_feed" class="swiper-wrapper image-popup">
                        </div>

                    </div>
                    <div class="follow-link">
                        <a href="https://www.instagram.com/themeitems/" target="_blank">Follow us On Instagram</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
